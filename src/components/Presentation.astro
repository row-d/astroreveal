<script>
  import Reveal from "reveal.js";
  import Markdown from "reveal.js/plugin/markdown/markdown.esm.js";
  import CodeHighlight from "reveal.js/plugin/highlight/highlight.esm.js";

  Reveal.configure({ showNotes: true });

  let deck = new Reveal({
    plugins: [Markdown, CodeHighlight],
  });
  deck.initialize();
</script>
